RewriteEngine On
# Define a base como /api/
RewriteBase /api/
# Não redireciona se for um arquivo ou diretório existente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# Redireciona todas as requisições para index.php
RewriteRule ^(.*)$ index.php [QSA,L]
<FilesMatch "^api/.*$">
    AuthType Basic
    AuthName "API Access"
    Require valid-user
    # Configurar autenticação conforme necessário
</FilesMatch>